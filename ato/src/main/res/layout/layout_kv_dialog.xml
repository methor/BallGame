<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <EditText
        android:id="@+id/etxt_kv_request_dialog_key"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/txt_kv_key"
        android:ems="10"
        android:inputType="text" >
        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/etxt_kv_request_dialog_value"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/txt_kv_value"
        android:layout_below="@+id/etxt_kv_request_dialog_key"
        android:ems="10"
        android:inputType="text" />
</RelativeLayout>